<?xml version="1.0" encoding="UTF-8" ?> 

<!DOCTYPE tiles-definitions PUBLIC 
"-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
"http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

	<!-- BASE LAYOUT -->
	<definition name="baseLayout" template="/layouts/_mainLayout.jsp">
		<put-attribute name="navbar" value="/layouts/_mainNavBar.jsp" />
		<put-list-attribute name="moreStyles">
			<add-attribute value="_css/mainLayout.css"></add-attribute>
		</put-list-attribute>
	</definition>

	<!-- INDEX -->
	<definition name="index" extends="baseLayout">
		<put-attribute name="title" value="Accueil" />
		<put-attribute name="body" value="/views/index.jsp" />
	</definition>
	
	<!-- CONTACT -->
	<definition name="contact" extends="baseLayout">
		<put-attribute name="title" value="Contact" />
		<put-attribute name="body" value="/views/contact.jsp" />
	</definition>
	
	<!-- ABOUT -->
	<definition name="about" extends="baseLayout">
		<put-attribute name="title" value="A propos" />
		<put-attribute name="body" value="/views/about.jsp" />
	</definition>

</tiles-definitions>