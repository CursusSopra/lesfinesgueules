<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- PACKAGE UTILISATEURS -->
	<package name="utilisateurs" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<!-- MON COMPTE -->
		<action name="mon-compte" class="fr.cursusSopra.action.utilisateurs.InscriptionAction" method="createProfilForm">
			<result name="success" type="tiles">mon-compte</result>
		</action>
		
		<!-- INSCRIPTION -->
		<action name="inscription" class="fr.cursusSopra.action.utilisateurs.InscriptionAction" method="createProfil">
			<result name="success" type="tiles">inscription</result>
		</action>
		
		

	</package>

</struts>