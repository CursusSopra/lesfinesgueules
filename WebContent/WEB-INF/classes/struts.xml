<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<constant name="struts.devMode" value="true" />
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<!-- <constant name="struts.action.extension" value="" /> -->

<!-- 	<constant name="struts.convention.action.suffix" value="Controller"/> -->
<!-- 	<constant name="struts.convention.action.mapAllMatches" value="true"/> -->
<!-- 	<constant name="struts.convention.default.parent.package" value="rest-default"/> -->

	<!-- DEFAULT PACKAGE -->
	<package name="default" extends="struts-default">
		<result-types>
			<result-type name="tiles"
				class="org.apache.struts2.views.tiles.TilesResult" />
		</result-types>

		<action name="" class="fr.cursusSopra.action.IndexAction" method="execute">
			<result name="success" type="tiles">index</result>
		</action>

		<action name="retourIndex" class="fr.cursusSopra.action.IndexAction" method="execute">
			<result name="success" type="tiles">index</result>
		</action>
	</package>


	<!-- OTHER STRUTS PACKAGES -->
	<include file="adminStruts.xml" />
	<include file="contenuStruts.xml" />
	<include file="utilisateursStruts.xml" />

</struts>